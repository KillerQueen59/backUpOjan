<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetails"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/posterBesarMovie"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
        <TextView
            android:id="@+id/titleDetailsMovie"
            android:layout_width="wrap_content"
            android:layout_below="@id/posterBesarMovie"
            android:layout_height="wrap_content"
            tools:text="Avengers"
            android:layout_margin="16dp"
            android:textSize="30sp"/>
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/release"
            android:id="@+id/descMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginLeft="16dp"
            android:text="@string/release"
            android:textSize="15sp"
            android:layout_below="@id/titleDetailsMovie"
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:id="@+id/dateMovie"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/titleDetailsMovie"
            android:layout_toRightOf="@id/release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/backDrop"
            android:layout_below="@id/descMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </ScrollView>




