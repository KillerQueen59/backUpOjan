<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView

        android:id="@+id/background1"
        android:layout_width="528dp"
        android:layout_height="489dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-259dp"
        android:layout_marginEnd="-2030dp"
        android:layout_marginRight="-2030dp"
        android:background="@drawable/round_back" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutemail"
        android:layout_width="match_parent"
        android:layout_below="@id/background1"
        android:layout_marginTop="28dp"
        android:layout_height="60dp"

        >

        <android.support.design.widget.TextInputEditText
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_back2"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:paddingStart="20dp"
            android:hint="@string/username"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutpassword"
        android:layout_width="match_parent"
        android:layout_below="@id/layoutemail"
        android:layout_marginTop="3dp"
        android:layout_height="60dp"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_back2"
            android:drawableStart="@drawable/ic_vpn_key_black_24dp"
            android:paddingStart="20dp"
            android:hint="@string/password"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/LupaPassword"
        android:layout_below="@id/layoutpassword"
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:textSize="10sp"
        android:textAlignment="textEnd"
        android:text="Lupa Password?"
        android:layout_height="wrap_content"
        android:gravity="end" />
    <Button
        android:clickable="true"
        android:background="@drawable/round_back3"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:id="@+id/Login"
        android:layout_below="@id/layoutpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>
    <TextView
        android:id="@+id/atau"
        android:text="Atau Login Dengan"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@id/Login"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/facebook"
        android:contextClickable="true"
        android:layout_width="121dp"
        android:layout_height="32dp"
        android:layout_below="@+id/atau"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_4"
        android:paddingLeft="45dp"
        android:paddingTop="6dp"
        android:text="Facebook"
        android:textColor="#ffffff" />


    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/Login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="-266dp"
        android:background="#ffffff"
        android:src="@drawable/facbook" />
    <TextView
        android:id="@+id/google"
        android:contextClickable="true"
        android:clickable="true"
        android:layout_width="121dp"
        android:layout_height="32dp"
        android:layout_below="@+id/atau"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/round_5"
        android:paddingStart="45dp"
        android:paddingTop="6dp"
        android:text="Google"
        android:textColor="#ffffff" />


    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/Login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="-266dp"
        android:src="@drawable/google" />
    <TextView
        android:textAlignment="center"
        android:text="@string/tidak_punya_akun"
        android:layout_marginTop="80dp"
        android:layout_below="@id/facebook"
        android:id="@+id/tidakpunyakaun"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#6fd09d"
        android:text="@string/daftar"
        android:layout_toRightOf="@id/tidakpunyakaun"
        android:layout_marginTop="80dp"
        android:layout_below="@id/facebook"
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>




</RelativeLayout>
